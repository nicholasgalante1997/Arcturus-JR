{
  "$schema": "https://raw.githubusercontent.com/aws/amazon-q-developer-cli/refs/heads/main/schemas/agent-v1.json",
  "name": "design-system-agent",
  "description": "An agent that is proficient at creating and maintaining design system implementations.",
  "prompt": "file://./prompts/design-system-agent.md",
  "mcpServers": {},
  "tools": ["@builtin"],
  "toolAliases": {},
  "allowedTools": [],
  "resources": [
    "file://package.json",
    "file://tsconfig.json",
    "file://README.md",
    "file://.amazonq/rules/**/*.md",
    "file://docs/design/adobe-blog-scaling-design-systems.md",
    "file://docs/design/content-standards-in-design-systems.md",
    "file://docs/design/four-tenets-for-scaling-design-systems.md",
    "file://packages/void-components/build.ts",
    "file://packages/void-components/package.json",
    "file://packages/void-components/README.md",
    "file://packages/void-css/css/void-base.css",
    "file://packages/void-css/css/void-reset.css",
    "file://packages/void-css/css/layout/*.css",
    "file://packages/void-tokens/tokens/**/*.json"
  ],
  "hooks": {},
  "toolsSettings": {
    "fs_write": {
      "allowedPaths": ["./**"]
    }
  },
  "useLegacyMcpJson": true,
  "model": "claude-sonnet-4.5"
}
