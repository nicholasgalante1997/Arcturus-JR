{
  "name": "@arcjr/config",
  "version": "1.0.0",
  "description": "Shared configuration files for @ArcJr packages",
  "private": true,
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/src/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "run-s bundle check-types",
    "bundle": "bun run build.ts",
    "bundle:watch": "bun run build.ts --watch",
    "check-types": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "typescript": "latest"
  },
  "dependencies": {
    "@arcjr/types": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19.0.0",
    "npm-run-all": "4.1.5",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.0.0"
  }
}
